        app:layout_constraintBottom_toTopOf="@+id/chicken_img_desc"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/top_overview"
        app:srcCompat="@drawable/lemon_grass_chicken" />
