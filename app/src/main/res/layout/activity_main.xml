        android:contentDescription="@string/description_of_image"
        android:scaleType="fitXY"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/id_serves"
        app:srcCompat="@drawable/man_icon" />

