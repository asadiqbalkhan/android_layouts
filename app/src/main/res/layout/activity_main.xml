        app:layout_constraintStart_toEndOf="@+id/id_server_2"
        app:layout_constraintTop_toBottomOf="@+id/id_serves"
        app:srcCompat="@drawable/man_icon" />

    <ImageView
        android:id="@+id/id_server_2"
        android:layout_width="15dp"
